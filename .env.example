# Classification System Environment
# Copy this file to .env and fill in your keys:
#   cp .env.example .env

# === LLM Configuration ===
LLM_MODEL=openai/gpt-5.2
OPENAI_API_KEY=your-openai-api-key-here

# Enable LLM mode for agents (instead of mock/simulated)
USE_LLM=true

# LLM Parameters
OPENAI_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# === Infrastructure ===
GATEWAY_PORT=8080
MINIO_ENDPOINT=localhost:9010
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
PLANNER_URL=http://localhost:8083
NATS_URL=nats://localhost:4222
DISCOVERY_MODE=static
PLANNER_MODE=langgraph

# === A2A Transport ===
DEFAULT_MESSAGE_TRANSPORT=NATS
TRANSPORT_SERVER_ENDPOINT=nats://localhost:4222
FARM_BROADCAST_TOPIC=agents.broadcast
ENABLE_HTTP=true

# === SLIM Security Configuration ===
# Auth mode: insecure, basic, jwt, mtls, spire
SLIM_AUTH_MODE=insecure

# TLS Configuration (enable for Phase 2+)
SLIM_TLS_ENABLED=false
# SLIM_TLS_CERT_PATH=./infrastructure/certs/server-cert.pem
# SLIM_TLS_KEY_PATH=./infrastructure/certs/server-key.pem
# SLIM_TLS_CA_PATH=./infrastructure/certs/ca-cert.pem

# Basic Auth (Phase 2)
# SLIM_BASIC_USERNAME=admin
# SLIM_BASIC_PASSWORD=your-secure-password

# JWT Auth (Phase 3)
# SLIM_JWT_ISSUER=agntcy-network
# SLIM_JWT_AUDIENCE=medical-agent,satellite-agent,general-agent
# SLIM_JWT_PRIVATE_KEY_PATH=./infrastructure/certs/jwt-private.pem
# SLIM_JWT_PUBLIC_KEY_PATH=./infrastructure/certs/jwt-public.pem

# MLS End-to-End Encryption
SLIM_MLS_ENABLED=false
SLIM_SHARED_SECRET=slim-mls-secret

# SPIRE Configuration (Phase 4)
# SPIRE_AGENT_SOCKET=/run/spire/sockets/agent.sock
# SPIRE_TRUST_DOMAIN=agntcy.network
